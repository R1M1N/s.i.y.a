{
  "asr": {
    "model_name": "nvidia/parakeet-tdt-0.6b-v3",
    "device": "cuda",
    "torch_dtype": "float16",
    "batch_size": 1,
    "max_length": 30,
    "chunk_duration": 5,
    "fallback_model": "openai/whisper-large-v3-turbo"
  },
  "llm": {
    "model_name": "Qwen/Qwen3-0.6B",
    "device": "cuda",
    "torch_dtype": "float16",
    "max_new_tokens": 20,
    "temperature": 0.7,
    "do_sample": true,
    "top_p": 0.9,
    "repetition_penalty": 1.1,
    "context_length": 512
  },
  "tts": {
    "model_name": "fishaudio/openaudio-s1-mini",
    "device": "cuda", 
    "torch_dtype": "float16",
    "voice_speed": 1.2,
    "fallback_tts": "system"
  },
  "performance": {
    "enable_tensorrt": true,
    "enable_quantization": true,
    "batch_processing": true,
    "max_conversation_history": 3,
    "target_response_time_ms": 100,
    "memory_optimization": true,
    "use_optimizer": true
  },
  "audio": {
    "sample_rate": 16000,
    "chunk_size": 1024,
    "channels": 1,
    "format": "float32",
    "vad_threshold": 0.5,
    "silence_duration": 1.0
  },
  "personality": {
    "name": "S.I.Y.A Enhanced",
    "full_name": "Simply Intended Yet Astute Assistant",
    "greeting": "Hello! I'm S.I.Y.A Enhanced, your intelligent AI assistant with real-time capabilities. How can I help you today?",
    "tone": "intelligent, helpful, and context-aware",
    "response_style": "comprehensive with real-time capabilities",
    "personality_traits": ["intelligent", "helpful", "quick-witted", "friendly", "system-aware"]
  },
  "enhanced_features": {
    "intelligent_greeting": true,
    "real_time_data": true,
    "general_web_search": true,
    "activity_monitoring": true,
    "notes_reminders": true,
    "smart_suggestions": true,
    "database_path": "siya_activities.db"
  },
  "mcp_servers": {
    "enabled": true,
    "auto_discover": true,
    "dynamic_load": true,
    "servers": [
      {
        "name": "time_server",
        "type": "local",
        "module": "siya_enhanced",
        "class": "RealtimeDataFetcher",
        "methods": ["get_time_info"],
        "description": "Time and date information"
      },
      {
        "name": "weather_server", 
        "type": "local",
        "module": "siya_enhanced",
        "class": "RealtimeDataFetcher",
        "methods": ["get_weather"],
        "description": "Weather information"
      },
      {
        "name": "bitcoin_server",
        "type": "local", 
        "module": "siya_enhanced",
        "class": "RealtimeDataFetcher",
        "methods": ["get_bitcoin_price"],
        "description": "Cryptocurrency prices"
      },
      {
        "name": "web_search_server",
        "type": "local",
        "module": "siya_enhanced", 
        "class": "GeneralWebSearch",
        "methods": ["search"],
        "description": "General web search"
      },
      {
        "name": "activity_server",
        "type": "local",
        "module": "siya_enhanced",
        "class": "ActivityMonitor", 
        "methods": ["log_activity", "get_recent_activities", "generate_work_suggestions"],
        "description": "Activity tracking and smart suggestions"
      },
      {
        "name": "notes_server",
        "type": "local",
        "module": "siya_enhanced",
        "class": "NotesReminders",
        "methods": ["add_note", "add_reminder", "get_recent_notes", "get_active_reminders"],
        "description": "Notes and reminders management"
      }
    ]
  },
  "custom_mcp_servers": {
    "enabled": true,
    "config_file": "configs/mcp_servers.json"
  },
  "optimization": {
    "torch_compile": false,
    "flash_attention": true,
    "gradient_checkpointing": false,
    "torch_backends": {
      "cublas_enabled": true,
      "cudnn_enabled": true,
      "cudnn_benchmark": true,
      "cudnn_deterministic": false
    }
  }
}